<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:OpenIPC_Config"
             xmlns:converters="clr-namespace:OpenIPC_Config.Converters"
             x:Class="OpenIPC_Config.App"
             RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <StyleInclude Source="avares://OpenIPC_Config/Styles/Styles.axaml" />
    </Application.Styles>
    
    <Application.Resources>
        <converters:BooleanToOpacityConverter x:Key="BooleanToOpacityConverter"/>
        <converters:XToStartPointConverter x:Key="XToStartPointConverter" />
        <converters:XToEndPointConverter x:Key="XToEndPointConverter" />
        <converters:YToStartPointConverter x:Key="YToStartPointConverter" />
        <converters:YToEndPointConverter x:Key="YToEndPointConverter" />
        <converters:EnumToBoolConverter x:Key="EnumToBoolConverter" />
    </Application.Resources>
    
    
</Application>